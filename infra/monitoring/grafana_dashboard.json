{
  "dashboard": {
    "id": null,
    "uid": "xalgo-dashboard",
    "title": "XAlgo Trading System Dashboard",
    "timezone": "UTC",
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 2,
    "panels": [
      {
        "type": "graph",
        "title": "Spread Monitor",
        "targets": [
          {
            "expr": "xalgo_latest_spread",
            "legendFormat": "Spread",
            "interval": ""
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "datasource": "Prometheus"
      },
      {
        "type": "graph",
        "title": "Volatility Monitor",
        "targets": [
          {
            "expr": "xalgo_latest_volatility",
            "legendFormat": "Volatility",
            "interval": ""
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "datasource": "Prometheus"
      },
      {
        "type": "graph",
        "title": "Orderbook Imbalance Monitor",
        "targets": [
          {
            "expr": "xalgo_latest_imbalance",
            "legendFormat": "Imbalance",
            "interval": ""
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "datasource": "Prometheus"
      },
      {
        "type": "graph",
        "title": "Daily P&L Tracker",
        "targets": [
          {
            "expr": "xalgo_daily_pnl",
            "legendFormat": "PnL",
            "interval": ""
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        },
        "datasource": "Prometheus"
      },
      {
        "type": "gauge",
        "title": "ML Filter Accuracy (%)",
        "targets": [
          {
            "expr": "mlfilter_correct_predictions / mlfilter_total_predictions * 100",
            "legendFormat": "Accuracy %",
            "interval": ""
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "green",
                  "value": 90
                }
              ]
            }
          }
        }
      }
    ]
  },
  "overwrite": true
}